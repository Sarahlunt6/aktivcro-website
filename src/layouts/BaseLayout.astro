---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PreloadResources from '../components/performance/PreloadResources.astro';
import CriticalCSS from '../components/performance/CriticalCSS.astro';

export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  noHeader?: boolean;
  noFooter?: boolean;
}

const { 
  title = 'AktivCRO - Stop Losing 95% of Your Visitors',
  description = 'Transform your website into a lead generation machine with our proven 4-framework system. 200-400% more leads in 30 days.',
  ogImage = '/og-image.svg',
  noHeader = false,
  noFooter = false
} = Astro.props;

// SEO-optimized image alt text
const ogImageAlt = 'AktivCRO Conversion Rate Optimization Services - Transform Your Website Into a Lead Generation Machine';

const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site) : Astro.url;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Critical CSS and Performance Resources -->
    <CriticalCSS />
    <PreloadResources />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />
    
    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="AktivCRO" />
    
    <!-- Google Analytics -->
    {import.meta.env.GOOGLE_ANALYTICS_ID && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${import.meta.env.GOOGLE_ANALYTICS_ID}`}></script>
        <script define:vars={{ gaId: import.meta.env.GOOGLE_ANALYTICS_ID }}>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', gaId);
        </script>
      </>
    )}
    
    <!-- Microsoft Clarity -->
    {import.meta.env.MICROSOFT_CLARITY_ID && (
      <script define:vars={{ clarityId: import.meta.env.MICROSOFT_CLARITY_ID }}>
        (function(c,l,a,r,i,t,y){
          c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
          t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
          y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
        })(window, document, "clarity", "script", clarityId);
      </script>
    )}
    
    <!-- Schema.org markup -->
    <script type="application/ld+json" define:vars={{ 
      siteUrl: import.meta.env.SITE_URL || 'https://aktivcro.com',
      contactEmail: import.meta.env.CONTACT_EMAIL || 'hello@aktivcro.com'
    }}>
      {
        "@context": "https://schema.org",
        "@type": ["Organization", "LocalBusiness", "ProfessionalService"],
        "name": "AktivCRO",
        "alternateName": "Aktiv CRO",
        "description": "Professional conversion rate optimization service that transforms static websites into intelligent problem-solving platforms. Specializing in lead generation, A/B testing, and website performance optimization.",
        "url": siteUrl,
        "logo": siteUrl + "/favicon.svg",
        "image": siteUrl + "/og-image.svg",
        "foundingDate": "2024",
        "founders": [
          {
            "@type": "Person",
            "name": "AktivCRO Team"
          }
        ],
        "sameAs": [
          "https://www.linkedin.com/company/2911272/admin/dashboard/",
          "https://www.facebook.com/opkie",
          "https://www.youtube.com/@opkiebiz",
          "https://www.instagram.com/opkie/"
        ],
        "contactPoint": [
          {
            "@type": "ContactPoint",
            "contactType": "Customer Service",
            "email": contactEmail,
            "url": "https://calendly.com/aktivcro/strategy-call",
            "availableLanguage": "English"
          },
          {
            "@type": "ContactPoint", 
            "contactType": "Sales",
            "email": contactEmail,
            "telephone": "+1-555-123-4567",
            "availableLanguage": "English"
          }
        ],
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "US",
          "addressRegion": "Remote"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": "39.8283",
          "longitude": "-98.5795"
        },
        "areaServed": {
          "@type": "Country",
          "name": "United States"
        },
        "serviceType": "Conversion Rate Optimization",
        "priceRange": "$$$",
        "paymentAccepted": ["Credit Card", "Bank Transfer", "Invoice"],
        "currenciesAccepted": "USD"
      }
    </script>

    <!-- Service Schema -->
    <script type="application/ld+json" define:vars={{ 
      siteUrl: import.meta.env.SITE_URL || 'https://aktivcro.com'
    }}>
      {
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "Conversion Rate Optimization Services",
        "description": "Professional CRO services including website audits, A/B testing, lead generation optimization, and conversion funnel analysis.",
        "provider": {
          "@type": "Organization",
          "name": "AktivCRO",
          "url": siteUrl
        },
        "serviceType": "Digital Marketing",
        "category": "Conversion Rate Optimization",
        "offers": [
          {
            "@type": "Offer",
            "name": "Foundation Package",
            "description": "Intelligent framework selection and implementation with mobile optimization",
            "price": "5000",
            "priceCurrency": "USD",
            "availability": "InStock",
            "url": siteUrl + "/#pricing"
          },
          {
            "@type": "Offer", 
            "name": "Growth Package",
            "description": "Complete foundation plus custom micro-experiences and advanced tracking",
            "price": "5000",
            "priceCurrency": "USD", 
            "availability": "InStock",
            "url": siteUrl + "/#pricing"
          },
          {
            "@type": "Offer",
            "name": "Enterprise Platform", 
            "description": "Full platform transformation with ongoing optimization and dedicated support",
            "price": "15000",
            "priceCurrency": "USD",
            "availability": "InStock", 
            "url": siteUrl + "/#pricing"
          }
        ],
        "areaServed": {
          "@type": "Country",
          "name": "United States"
        }
      }
    </script>
  </head>
  
  <body class="min-h-screen flex flex-col">
    {!noHeader && <Header />}
    
    <main class="flex-1">
      <slot />
    </main>
    
    {!noFooter && <Footer />}
  </body>
</html>