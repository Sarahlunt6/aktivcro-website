---
export const prerender = true;

import BaseLayout from '../../layouts/BaseLayout.astro';
import Container from '../../components/ui/Container.astro';
import Section from '../../components/ui/Section.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
import MobilePWADemoInteractive from '../../components/interactive/MobilePWADemoInteractive.tsx';
---

<BaseLayout 
  title="Mobile PWA Framework Demo - Local Services CRO"
  description="Experience our Mobile PWA Framework live demo optimized for local services, home services, and mobile-first businesses."
>
  <!-- Hero Section -->
  <Section background="accent" padding="lg">
    <Container>
      <div class="text-center text-gray-900">
        <Badge variant="primary" class="mb-4">Live Demo</Badge>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          Mobile PWA Framework <span class="text-primary">Demo</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 opacity-90 max-w-3xl mx-auto">
          See how our Mobile PWA Framework creates app-like experiences that convert mobile visitors into customers.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button variant="primary" size="lg" href="#live-demo">
            View Live Demo
          </Button>
          <Button variant="outline" size="lg" href="/demos">
            ← Back to All Demos
          </Button>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Framework Overview -->
  <Section padding="lg">
    <Container>
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Built for Mobile-First Businesses</h2>
          <p class="text-lg text-gray-600 mb-6">
            The Mobile PWA Framework is designed for local services, home improvement, restaurants, and businesses where mobile traffic dominates and immediate action is critical.
          </p>
          <div class="space-y-4 mb-8">
            <div class="flex items-start">
              <div class="w-6 h-6 bg-success rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Lightning Fast Loading</h3>
                <p class="text-gray-600">PWA technology ensures instant loading even on slow connections</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="w-6 h-6 bg-success rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">App-Like Experience</h3>
                <p class="text-gray-600">Full-screen experience with native app feel and interactions</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="w-6 h-6 bg-success rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">One-Tap Actions</h3>
                <p class="text-gray-600">Click-to-call, instant booking, and location-based features</p>
              </div>
            </div>
          </div>
        </div>
        <div class="bg-gradient-to-br from-accent-100 to-primary-100 rounded-2xl p-8 text-center">
          <div class="text-4xl font-bold text-accent-700 mb-2">+60%</div>
          <div class="text-lg font-semibold text-gray-900 mb-2">Mobile Conversion Boost</div>
          <div class="text-gray-600 mb-6">Local Services Average</div>
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <div class="font-bold text-gray-900">4-6 weeks</div>
              <div class="text-gray-600">Implementation</div>
            </div>
            <div>
              <div class="font-bold text-gray-900">ROI 500%+</div>
              <div class="text-gray-600">Typical Return</div>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Mobile Demo Simulator -->
  <Section id="live-demo" background="gray" padding="lg">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Interactive Mobile Demo</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Experience the Mobile PWA Framework on a simulated mobile device. Try the features just like your customers would.
        </p>
      </div>

      <MobilePWADemoInteractive client:visible />
        <div class="flex justify-center">
          <!-- Mobile Device Frame -->
          <div class="relative">
            <!-- Phone Frame -->
            <div class="w-80 h-[640px] bg-gray-900 rounded-[3rem] p-4 shadow-2xl">
              <!-- Screen -->
              <div class="w-full h-full bg-white rounded-[2.5rem] overflow-hidden relative">
                <!-- Status Bar -->
                <div class="bg-black text-white text-xs px-4 py-2 flex justify-between items-center">
                  <span>9:41</span>
                  <div class="flex items-center space-x-1">
                    <div class="w-4 h-2 border border-white rounded-sm">
                      <div class="w-3 h-1 bg-white rounded-sm m-0.5"></div>
                    </div>
                  </div>
                </div>

                <!-- App Content -->
                <div class="flex-1 bg-gradient-to-b from-accent-400 to-accent-600 text-white relative">
                  <!-- Header -->
                  <div class="p-4 flex items-center justify-between">
                    <div class="font-bold text-lg">QuickFix Plumbing</div>
                    <button class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                      </svg>
                    </button>
                  </div>

                  <!-- Hero Content -->
                  <div class="px-4 pb-6">
                    <h1 class="text-2xl font-bold mb-2">Emergency Plumbing</h1>
                    <p class="text-accent-100 mb-4">Available 24/7 • Licensed & Insured</p>
                    
                    <!-- Action Buttons -->
                    <div class="space-y-3">
                      <button class="w-full bg-white text-accent-600 py-4 rounded-xl font-bold text-lg flex items-center justify-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                        </svg>
                        Call Now: (555) 123-HELP
                      </button>
                      
                      <button class="w-full bg-accent-700 text-white py-3 rounded-xl font-semibold flex items-center justify-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        Book Online Appointment
                      </button>
                    </div>

                    <!-- Trust Indicators -->
                    <div class="flex items-center justify-center space-x-4 mt-4 text-sm">
                      <div class="flex items-center">
                        <div class="text-yellow-300 mr-1">★★★★★</div>
                        <span>4.9/5</span>
                      </div>
                      <div>500+ Reviews</div>
                      <div>Same-Day Service</div>
                    </div>
                  </div>

                  <!-- Services Grid -->
                  <div class="bg-white text-gray-900 p-4 rounded-t-3xl">
                    <h2 class="font-bold text-lg mb-4 text-center">Emergency Services</h2>
                    <div class="grid grid-cols-2 gap-3 text-sm">
                      <div class="bg-gray-50 p-3 rounded-xl text-center">
                        <div class="w-8 h-8 bg-accent-100 rounded-lg mx-auto mb-2 flex items-center justify-center">
                          <svg class="w-4 h-4 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                          </svg>
                        </div>
                        <div class="font-semibold">Drain Cleaning</div>
                        <div class="text-gray-600">Starting $89</div>
                      </div>
                      <div class="bg-gray-50 p-3 rounded-xl text-center">
                        <div class="w-8 h-8 bg-accent-100 rounded-lg mx-auto mb-2 flex items-center justify-center">
                          <svg class="w-4 h-4 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                          </svg>
                        </div>
                        <div class="font-semibold">Water Heater</div>
                        <div class="text-gray-600">Free Estimate</div>
                      </div>
                    </div>
                  </div>

                  <!-- Floating Action Button -->
                  <div class="absolute bottom-4 right-4">
                    <button class="w-14 h-14 bg-green-500 rounded-full flex items-center justify-center shadow-lg">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                      </svg>
                    </button>
                  </div>
                </div>

                <!-- Navigation Bar -->
                <div class="absolute bottom-0 left-0 right-0 bg-white border-t border-gray-200 p-4">
                  <div class="flex justify-around items-center text-xs">
                    <div class="text-center text-accent-600">
                      <div class="w-6 h-6 mx-auto mb-1">
                        <svg fill="currentColor" viewBox="0 0 24 24">
                          <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
                        </svg>
                      </div>
                      <span>Services</span>
                    </div>
                    <div class="text-center text-gray-400">
                      <div class="w-6 h-6 mx-auto mb-1">
                        <svg fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                      </div>
                      <span>Reviews</span>
                    </div>
                    <div class="text-center text-gray-400">
                      <div class="w-6 h-6 mx-auto mb-1">
                        <svg fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                        </svg>
                      </div>
                      <span>Location</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Demo Controls -->
        <div class="mt-8 text-center">
          <div class="bg-white rounded-2xl shadow-lg p-6 max-w-2xl mx-auto">
            <h3 class="text-xl font-bold mb-4">Try These Mobile Features</h3>
            <div class="grid md:grid-cols-3 gap-4 text-sm">
              <button class="p-3 bg-accent-50 rounded-lg hover:bg-accent-100 transition-colors">
                <div class="font-semibold text-accent-700">One-Tap Calling</div>
                <div class="text-gray-600">Instant phone connection</div>
              </button>
              <button class="p-3 bg-primary-50 rounded-lg hover:bg-primary-100 transition-colors">
                <div class="font-semibold text-primary">Quick Booking</div>
                <div class="text-gray-600">Schedule appointment</div>
              </button>
              <button class="p-3 bg-success-50 rounded-lg hover:bg-success-100 transition-colors">
                <div class="font-semibold text-success">Live Chat</div>
                <div class="text-gray-600">Instant messaging</div>
              </button>
            </div>
            <div class="mt-4 flex justify-center">
              <Button variant="accent" size="lg" href="#get-started">
                Get This Framework
              </Button>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- PWA Features -->
  <Section padding="lg">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Mobile PWA Features</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Every feature is optimized for mobile users who need immediate solutions and fast results.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <Card variant="hover" class="text-center">
          <div class="w-16 h-16 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-accent-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">Instant Loading</h3>
          <p class="text-gray-600">
            PWA technology ensures your site loads in under 2 seconds, even on slow 3G connections.
          </p>
        </Card>

        <Card variant="hover" class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">One-Tap Actions</h3>
          <p class="text-gray-600">
            Click-to-call, text messaging, and GPS directions with a single tap. No typing required.
          </p>
        </Card>

        <Card variant="hover" class="text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">App-Like Experience</h3>
          <p class="text-gray-600">
            Full-screen navigation, smooth animations, and native app feel without requiring downloads.
          </p>
        </Card>

        <Card variant="hover" class="text-center">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">Location Services</h3>
          <p class="text-gray-600">
            Automatic location detection, service area mapping, and GPS-powered lead qualification.
          </p>
        </Card>

        <Card variant="hover" class="text-center">
          <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">Live Chat Widget</h3>
          <p class="text-gray-600">
            Instant messaging for immediate support and quote requests, integrated with your CRM.
          </p>
        </Card>

        <Card variant="hover" class="text-center">
          <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zM12 17H7l5-5v5z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">Offline Capability</h3>
          <p class="text-gray-600">
            Basic functionality works even when users lose internet connection, ensuring no lost leads.
          </p>
        </Card>
      </div>
    </Container>
  </Section>

  <!-- Results Section -->
  <Section background="gray" padding="lg">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Mobile-First Results</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          See how the Mobile PWA Framework transforms local service businesses.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-8">
        <Card variant="elevated" class="text-center">
          <div class="text-5xl font-bold text-accent-700 mb-4">420%</div>
          <h3 class="text-2xl font-bold mb-4">Mobile Conversion Increase</h3>
          <p class="text-gray-600 mb-6">
            CityWide Home Services saw a 420% increase in mobile conversions within 4 weeks of PWA implementation.
          </p>
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <div class="font-bold text-gray-900">$950K</div>
              <div class="text-gray-600">New Revenue</div>
            </div>
            <div>
              <div class="font-bold text-gray-900">ROI 1,200%</div>
              <div class="text-gray-600">Return on Investment</div>
            </div>
          </div>
        </Card>

        <Card variant="elevated" class="text-center">
          <div class="text-5xl font-bold text-success mb-4">85%</div>
          <h3 class="text-2xl font-bold mb-4">Mobile Traffic Conversion</h3>
          <p class="text-gray-600 mb-6">
            Mobile visitors convert at 85% the rate of desktop users, compared to industry average of 40%.
          </p>
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <div class="font-bold text-gray-900">1.8s</div>
              <div class="text-gray-600">Average Load Time</div>
            </div>
            <div>
              <div class="font-bold text-gray-900">92%</div>
              <div class="text-gray-600">User Retention Rate</div>
            </div>
          </div>
        </Card>
      </div>
    </Container>
  </Section>

  <!-- CTA Section -->
  <Section id="get-started" background="accent" padding="lg">
    <Container>
      <div class="text-center text-gray-900">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Ready to Go Mobile-First?
        </h2>
        <p class="text-xl mb-8 opacity-90 max-w-2xl mx-auto">
          Transform your local service business with our Mobile PWA Framework. Capture more mobile leads and grow your revenue.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button variant="primary" size="lg" href="/calculator">
            Calculate Mobile ROI
          </Button>
          <Button variant="outline" size="lg" href="/about#contact">
            Schedule Demo Call
          </Button>
        </div>
      </div>
    </Container>
  </Section>
</BaseLayout>