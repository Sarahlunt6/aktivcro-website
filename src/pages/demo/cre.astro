---
export const prerender = true;

import BaseLayout from '../../layouts/BaseLayout.astro';
import Container from '../../components/ui/Container.astro';
import Section from '../../components/ui/Section.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
---

<BaseLayout 
  title="CRE Framework Demo - Real Estate CRO"
  description="Experience our CRE Framework live demo designed for commercial and residential real estate professionals."
>
  <!-- Hero Section -->
  <Section background="success" padding="lg">
    <Container>
      <div class="text-center text-white">
        <Badge variant="primary" class="mb-4">Live Demo</Badge>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          CRE Framework <span class="text-accent">Demo</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 opacity-90 max-w-3xl mx-auto">
          See how our CRE Framework transforms real estate websites into lead-generating machines with property showcases and market tools.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button variant="accent" size="lg" href="#live-demo">
            View Live Demo
          </Button>
          <Button variant="outline" size="lg" href="/demos">
            ← Back to All Demos
          </Button>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Framework Overview -->
  <Section padding="lg">
    <Container>
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Built for Real Estate Professionals</h2>
          <p class="text-lg text-gray-600 mb-6">
            The CRE Framework is specifically designed for commercial and residential real estate agents, brokers, and property management companies who need to showcase properties and capture qualified leads.
          </p>
          <div class="space-y-4 mb-8">
            <div class="flex items-start">
              <div class="w-6 h-6 bg-success rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Property Showcases</h3>
                <p class="text-gray-600">Interactive property galleries with virtual tours and detailed specs</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="w-6 h-6 bg-success rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Market Analysis Tools</h3>
                <p class="text-gray-600">Automated property valuations and market trend reports</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="w-6 h-6 bg-success rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Lead Qualification</h3>
                <p class="text-gray-600">Smart forms that qualify buyer intent and financial readiness</p>
              </div>
            </div>
          </div>
        </div>
        <div class="bg-gradient-to-br from-success-100 to-primary-100 rounded-2xl p-8 text-center">
          <div class="text-4xl font-bold text-success mb-2">+280%</div>
          <div class="text-lg font-semibold text-gray-900 mb-2">Lead Generation Boost</div>
          <div class="text-gray-600 mb-6">Real Estate Average</div>
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <div class="font-bold text-gray-900">6-8 weeks</div>
              <div class="text-gray-600">Implementation</div>
            </div>
            <div>
              <div class="font-bold text-gray-900">ROI 720%</div>
              <div class="text-gray-600">Typical Return</div>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Live Demo Section -->
  <Section id="live-demo" background="gray" padding="lg">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Interactive Real Estate Demo</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Explore how the CRE Framework transforms a typical real estate website into a conversion-optimized lead generation platform.
        </p>
      </div>

      <!-- Demo Container -->
      <div class="max-w-6xl mx-auto">
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
          <!-- Demo Navigation -->
          <div class="bg-gray-100 px-6 py-4 border-b flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <div class="flex space-x-2">
                <div class="w-3 h-3 bg-red-400 rounded-full"></div>
                <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
                <div class="w-3 h-3 bg-green-400 rounded-full"></div>
              </div>
              <div class="bg-white px-4 py-2 rounded-lg text-sm text-gray-600 flex-1">
                https://demo-realestate.aktivcro.com
              </div>
            </div>
            <Badge variant="success">Live Demo</Badge>
          </div>

          <!-- Demo Content -->
          <div class="aspect-video bg-gradient-to-br from-success-50 to-primary-50 relative overflow-hidden">
            <!-- Simulated Real Estate Website -->
            <div class="absolute inset-4 bg-white rounded-lg shadow-lg overflow-hidden">
              <!-- Header -->
              <div class="bg-success text-white p-4 flex items-center justify-between">
                <div class="font-bold text-lg">MetroRealty Group</div>
                <div class="flex space-x-4 text-sm">
                  <span>Buy</span>
                  <span>Sell</span>
                  <span>Market Reports</span>
                  <span class="bg-accent text-success px-3 py-1 rounded-full">Get Valuation</span>
                </div>
              </div>
              
              <!-- Hero Section -->
              <div class="p-6">
                <div class="grid grid-cols-2 gap-4">
                  <!-- Left: Search Tool -->
                  <div>
                    <h1 class="text-xl font-bold text-gray-900 mb-3">Find Your Dream Property</h1>
                    <div class="bg-gray-50 p-4 rounded-lg">
                      <div class="grid grid-cols-2 gap-2 mb-3">
                        <input type="text" placeholder="Location" class="text-xs p-2 border rounded">
                        <select class="text-xs p-2 border rounded">
                          <option>Price Range</option>
                        </select>
                      </div>
                      <div class="grid grid-cols-2 gap-2 mb-3">
                        <select class="text-xs p-2 border rounded">
                          <option>Bedrooms</option>
                        </select>
                        <select class="text-xs p-2 border rounded">
                          <option>Property Type</option>
                        </select>
                      </div>
                      <button class="w-full bg-success text-white py-2 rounded text-sm font-semibold">
                        Search Properties
                      </button>
                    </div>
                  </div>
                  
                  <!-- Right: Featured Property -->
                  <div>
                    <div class="bg-gray-200 rounded-lg p-3 text-center">
                      <div class="text-sm font-semibold mb-2">Featured Property</div>
                      <div class="bg-gray-300 h-16 rounded mb-2"></div>
                      <div class="text-lg font-bold text-success">$650,000</div>
                      <div class="text-xs text-gray-600">3 bed • 2 bath • Downtown</div>
                      <button class="mt-2 text-xs bg-success text-white px-3 py-1 rounded">
                        Schedule Tour
                      </button>
                    </div>
                  </div>
                </div>
                
                <!-- Market Tools -->
                <div class="mt-4 grid grid-cols-3 gap-2 text-xs">
                  <div class="bg-blue-50 p-2 rounded text-center">
                    <div class="font-semibold text-blue-800">Home Valuation</div>
                    <div class="text-blue-600">Get instant estimate</div>
                  </div>
                  <div class="bg-green-50 p-2 rounded text-center">
                    <div class="font-semibold text-green-800">Market Report</div>
                    <div class="text-green-600">Area trends & data</div>
                  </div>
                  <div class="bg-purple-50 p-2 rounded text-center">
                    <div class="font-semibold text-purple-800">Mortgage Calc</div>
                    <div class="text-purple-600">Payment estimates</div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Interactive Hotspots -->
            <div class="absolute top-20 right-8 w-4 h-4 bg-success rounded-full animate-pulse cursor-pointer" title="Instant property valuation tool"></div>
            <div class="absolute bottom-32 left-8 w-4 h-4 bg-primary rounded-full animate-pulse cursor-pointer" title="Smart search with filters"></div>
            <div class="absolute bottom-20 center w-4 h-4 bg-accent-600 rounded-full animate-pulse cursor-pointer" title="Featured property showcase"></div>
          </div>

          <!-- Demo Controls -->
          <div class="bg-gray-50 px-6 py-4 border-t">
            <div class="flex items-center justify-between">
              <div class="text-sm text-gray-600">
                Click the hotspots to explore CRE Framework features
              </div>
              <div class="flex items-center space-x-4">
                <button class="text-sm text-success hover:underline">← Before</button>
                <button class="text-sm text-success hover:underline">After →</button>
                <Button variant="success" size="sm" href="#get-started">
                  Get This Framework
                </Button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Results Section -->
  <Section background="gray" padding="lg">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Real Estate Results</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          See how the CRE Framework transforms real estate businesses.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-8">
        <Card variant="elevated" class="text-center">
          <div class="text-5xl font-bold text-success mb-4">255%</div>
          <h3 class="text-2xl font-bold mb-4">More Qualified Leads</h3>
          <p class="text-gray-600 mb-6">
            MetroRealty Group generated 255% more qualified leads with 40% higher average property inquiry value.
          </p>
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <div class="font-bold text-gray-900">$3.2M</div>
              <div class="text-gray-600">Sales Pipeline</div>
            </div>
            <div>
              <div class="font-bold text-gray-900">ROI 720%</div>
              <div class="text-gray-600">Return on Investment</div>
            </div>
          </div>
        </Card>

        <Card variant="elevated" class="text-center">
          <div class="text-5xl font-bold text-primary mb-4">180%</div>
          <h3 class="text-2xl font-bold mb-4">Search Visibility Increase</h3>
          <p class="text-gray-600 mb-6">
            Local search visibility improved by 180% with property-specific landing pages and market tools.
          </p>
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <div class="font-bold text-gray-900">45% faster</div>
              <div class="text-gray-600">Lead Response Time</div>
            </div>
            <div>
              <div class="font-bold text-gray-900">65%</div>
              <div class="text-gray-600">Higher Close Rate</div>
            </div>
          </div>
        </Card>
      </div>
    </Container>
  </Section>

  <!-- CTA Section -->
  <Section id="get-started" background="success" padding="lg">
    <Container>
      <div class="text-center text-white">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Ready to Transform Your Real Estate Business?
        </h2>
        <p class="text-xl mb-8 opacity-90 max-w-2xl mx-auto">
          Implement the CRE Framework and start generating more qualified leads with intelligent property showcases and market tools.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button variant="accent" size="lg" href="/calculator">
            Calculate Your ROI
          </Button>
          <Button variant="outline" size="lg" href="/about#contact">
            Schedule Demo Call
          </Button>
        </div>
      </div>
    </Container>
  </Section>
</BaseLayout>