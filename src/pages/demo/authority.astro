---
export const prerender = true;

import BaseLayout from '../../layouts/BaseLayout.astro';
import Container from '../../components/ui/Container.astro';
import Section from '../../components/ui/Section.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
---

<BaseLayout 
  title="Authority Framework Demo - Professional Services CRO"
  description="Experience our Authority Framework live demo designed for professional services, consultancies, and B2B businesses. See how it increases trust and conversions."
>
  <!-- Hero Section -->
  <Section background="primary" padding="lg">
    <Container>
      <div class="text-center text-white">
        <Badge variant="accent" class="mb-4">Live Demo</Badge>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          Authority Framework <span class="text-accent">Demo</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 opacity-90 max-w-3xl mx-auto">
          See how our Authority Framework transforms professional service websites into trust-building, conversion-optimized platforms.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button variant="accent" size="lg" href="#live-demo">
            View Live Demo
          </Button>
          <Button variant="outline" size="lg" href="/demos">
            ← Back to All Demos
          </Button>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Framework Overview -->
  <Section padding="lg">
    <Container>
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Perfect for Professional Services</h2>
          <p class="text-lg text-gray-600 mb-6">
            The Authority Framework is specifically designed for consultancies, agencies, law firms, and other professional service providers who need to establish credibility and trust quickly.
          </p>
          <div class="space-y-4 mb-8">
            <div class="flex items-start">
              <div class="w-6 h-6 bg-success rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Trust-Building Elements</h3>
                <p class="text-gray-600">Testimonials, case studies, and social proof strategically placed</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="w-6 h-6 bg-success rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Expertise Showcase</h3>
                <p class="text-gray-600">Credentials, awards, and industry recognition prominently displayed</p>
              </div>
            </div>
            <div class="flex items-start">
              <div class="w-6 h-6 bg-success rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Smart Lead Qualification</h3>
                <p class="text-gray-600">Progressive forms that qualify prospects while gathering contact info</p>
              </div>
            </div>
          </div>
        </div>
        <div class="bg-gradient-to-br from-primary-100 to-accent-100 rounded-2xl p-8 text-center">
          <div class="text-4xl font-bold text-primary mb-2">+45%</div>
          <div class="text-lg font-semibold text-gray-900 mb-2">Average Conversion Increase</div>
          <div class="text-gray-600 mb-6">Professional Services Industry</div>
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <div class="font-bold text-gray-900">8-12 weeks</div>
              <div class="text-gray-600">Implementation</div>
            </div>
            <div>
              <div class="font-bold text-gray-900">ROI 400%+</div>
              <div class="text-gray-600">Typical Return</div>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Live Demo Section -->
  <Section id="live-demo" background="gray" padding="lg">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Interactive Demo</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Explore the Authority Framework with this interactive demo showing how it transforms a generic consulting website.
        </p>
      </div>

      <!-- Demo Container -->
      <div class="max-w-6xl mx-auto">
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
          <!-- Demo Navigation -->
          <div class="bg-gray-100 px-6 py-4 border-b flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <div class="flex space-x-2">
                <div class="w-3 h-3 bg-red-400 rounded-full"></div>
                <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
                <div class="w-3 h-3 bg-green-400 rounded-full"></div>
              </div>
              <div class="bg-white px-4 py-2 rounded-lg text-sm text-gray-600 flex-1">
                https://demo-authority.aktivcro.com
              </div>
            </div>
            <Badge variant="success">Live Demo</Badge>
          </div>

          <!-- Demo Content -->
          <div class="aspect-video bg-gradient-to-br from-primary-50 to-accent-50 relative overflow-hidden">
            <!-- Simulated Website Demo -->
            <div class="absolute inset-4 bg-white rounded-lg shadow-lg overflow-hidden">
              <!-- Header -->
              <div class="bg-primary text-white p-4 flex items-center justify-between">
                <div class="font-bold text-lg">Premier Consulting</div>
                <div class="flex space-x-4 text-sm">
                  <span>Services</span>
                  <span>About</span>
                  <span>Case Studies</span>
                  <span class="bg-accent text-primary px-3 py-1 rounded-full">Contact</span>
                </div>
              </div>
              
              <!-- Hero Section -->
              <div class="p-6 text-center">
                <h1 class="text-2xl font-bold text-gray-900 mb-2">Strategic Business Consulting</h1>
                <p class="text-gray-600 mb-4">Trusted by 500+ companies to drive growth and operational excellence</p>
                
                <!-- Trust Indicators -->
                <div class="flex justify-center items-center space-x-6 mb-4 text-xs">
                  <div class="flex items-center">
                    <div class="w-4 h-4 bg-yellow-400 rounded-full mr-1"></div>
                    <span>★★★★★ 4.9/5</span>
                  </div>
                  <div>25+ Years Experience</div>
                  <div>Fortune 500 Clients</div>
                </div>
                
                <!-- CTA -->
                <button class="bg-primary text-white px-6 py-2 rounded-lg text-sm font-semibold">
                  Get Free Strategy Session
                </button>
              </div>
              
              <!-- Features Grid -->
              <div class="px-6 pb-4">
                <div class="grid grid-cols-3 gap-2 text-xs">
                  <div class="text-center p-2 bg-gray-50 rounded">
                    <div class="w-4 h-4 bg-primary rounded mx-auto mb-1"></div>
                    <div class="font-semibold">Growth Strategy</div>
                  </div>
                  <div class="text-center p-2 bg-gray-50 rounded">
                    <div class="w-4 h-4 bg-accent-600 rounded mx-auto mb-1"></div>
                    <div class="font-semibold">Process Optimization</div>
                  </div>
                  <div class="text-center p-2 bg-gray-50 rounded">
                    <div class="w-4 h-4 bg-success rounded mx-auto mb-1"></div>
                    <div class="font-semibold">Digital Transformation</div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Interactive Hotspots -->
            <div class="absolute top-20 right-8 w-4 h-4 bg-primary rounded-full animate-pulse cursor-pointer" title="Trust indicators boost credibility"></div>
            <div class="absolute bottom-32 left-8 w-4 h-4 bg-accent-600 rounded-full animate-pulse cursor-pointer" title="Social proof increases conversions"></div>
            <div class="absolute bottom-20 center w-4 h-4 bg-success rounded-full animate-pulse cursor-pointer" title="Clear value proposition"></div>
          </div>

          <!-- Demo Controls -->
          <div class="bg-gray-50 px-6 py-4 border-t">
            <div class="flex items-center justify-between">
              <div class="text-sm text-gray-600">
                Click the hotspots above to see conversion optimization features
              </div>
              <div class="flex items-center space-x-4">
                <button class="text-sm text-primary hover:underline">← Before</button>
                <button class="text-sm text-primary hover:underline">After →</button>
                <Button variant="primary" size="sm" href="#get-started">
                  Get This Framework
                </Button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Key Features -->
  <Section padding="lg">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Authority Framework Features</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Every element is designed to build trust, establish authority, and guide visitors toward conversion.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <Card variant="hover" class="text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">Trust Signals</h3>
          <p class="text-gray-600">
            Testimonials, certifications, and client logos strategically placed to build immediate credibility.
          </p>
        </Card>

        <Card variant="hover" class="text-center">
          <div class="w-16 h-16 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-accent-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">Case Study Showcase</h3>
          <p class="text-gray-600">
            Detailed success stories with metrics and outcomes that demonstrate proven results.
          </p>
        </Card>

        <Card variant="hover" class="text-center">
          <div class="w-16 h-16 bg-success-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">Expert Positioning</h3>
          <p class="text-gray-600">
            Thought leadership content and industry recognition that positions you as the go-to expert.
          </p>
        </Card>

        <Card variant="hover" class="text-center">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">Smart Forms</h3>
          <p class="text-gray-600">
            Progressive lead qualification forms that gather valuable prospect information while feeling conversational.
          </p>
        </Card>

        <Card variant="hover" class="text-center">
          <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">Urgency Elements</h3>
          <p class="text-gray-600">
            Limited-time offers and scarcity indicators that encourage immediate action without being pushy.
          </p>
        </Card>

        <Card variant="hover" class="text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">ROI Calculator</h3>
          <p class="text-gray-600">
            Interactive tools that help prospects visualize the value of your services before they even contact you.
          </p>
        </Card>
      </div>
    </Container>
  </Section>

  <!-- Results Section -->
  <Section background="gray" padding="lg">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Real Results</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          See how the Authority Framework has transformed professional service businesses like yours.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-8">
        <Card variant="elevated" class="text-center">
          <div class="text-5xl font-bold text-primary mb-4">340%</div>
          <h3 class="text-2xl font-bold mb-4">Conversion Increase</h3>
          <p class="text-gray-600 mb-6">
            TechFlow Solutions saw a 340% increase in qualified leads within 8 weeks of implementing the Authority Framework.
          </p>
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <div class="font-bold text-gray-900">$2.4M</div>
              <div class="text-gray-600">New Revenue</div>
            </div>
            <div>
              <div class="font-bold text-gray-900">ROI 890%</div>
              <div class="text-gray-600">Return on Investment</div>
            </div>
          </div>
        </Card>

        <Card variant="elevated" class="text-center">
          <div class="text-5xl font-bold text-success mb-4">65%</div>
          <h3 class="text-2xl font-bold mb-4">Higher Close Rate</h3>
          <p class="text-gray-600 mb-6">
            Professional services firms report 65% higher close rates when prospects come through Authority Framework sites.
          </p>
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <div class="font-bold text-gray-900">45% less</div>
              <div class="text-gray-600">Sales Cycle Time</div>
            </div>
            <div>
              <div class="font-bold text-gray-900">3.2x</div>
              <div class="text-gray-600">Average Deal Size</div>
            </div>
          </div>
        </Card>
      </div>
    </Container>
  </Section>

  <!-- CTA Section -->
  <Section id="get-started" background="primary" padding="lg">
    <Container>
      <div class="text-center text-white">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Ready to Establish Your Authority?
        </h2>
        <p class="text-xl mb-8 opacity-90 max-w-2xl mx-auto">
          Transform your professional services website with the Authority Framework. Start building trust and converting more prospects today.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button variant="accent" size="lg" href="/calculator">
            Calculate Your ROI
          </Button>
          <Button variant="outline" size="lg" href="/about#contact">
            Schedule Consultation
          </Button>
        </div>
      </div>
    </Container>
  </Section>
</BaseLayout>