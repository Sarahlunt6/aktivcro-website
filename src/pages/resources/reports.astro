---
export const prerender = true;

import BaseLayout from '../../layouts/BaseLayout.astro';
import Container from '../../components/ui/Container.astro';
import Section from '../../components/ui/Section.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
---

<BaseLayout 
  title="Industry Reports - Conversion Rate Benchmarks & Performance Data"
  description="Data-driven insights and benchmarks for your specific industry. Current conversion rates and performance metrics across 12+ industries."
>
  <!-- Hero Section -->
  <Section background="accent" padding="lg">
    <Container>
      <div class="text-center text-gray-900">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          Industry <span class="text-primary">Reports</span> & Benchmarks
        </h1>
        <p class="text-xl md:text-2xl mb-8 opacity-90 max-w-3xl mx-auto">
          Data-driven insights and benchmarks for your specific industry. Make informed optimization decisions based on real performance data.
        </p>
      </div>
    </Container>
  </Section>

  <!-- Featured Report -->
  <Section padding="lg">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">2025 Industry Benchmark Report</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our comprehensive analysis of conversion rates and performance metrics across 12 major industries.
        </p>
      </div>

      <Card variant="elevated" class="max-w-4xl mx-auto">
        <div class="md:flex items-center">
          <div class="md:w-1/3 p-6">
            <div class="aspect-square bg-gradient-to-br from-accent-100 to-accent-200 rounded-lg flex items-center justify-center">
              <div class="text-center">
                <div class="w-20 h-20 bg-accent-600 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                </div>
                <Badge variant="accent">2025 Data</Badge>
              </div>
            </div>
          </div>
          <div class="md:w-2/3 p-6">
            <h3 class="text-3xl font-bold mb-4">Industry Benchmark Report 2025</h3>
            <p class="text-gray-600 mb-6 text-lg">
              Based on data from 2.5M+ website visitors and $450M+ in tracked revenue. Includes conversion rates, device performance, geographic analysis, and optimization recommendations for 12 major industries.
            </p>
            <div class="grid grid-cols-2 gap-4 mb-6 text-sm">
              <div class="bg-gray-50 p-3 rounded-lg">
                <div class="font-semibold text-gray-900">2.5M+</div>
                <div class="text-gray-600">Visitors Analyzed</div>
              </div>
              <div class="bg-gray-50 p-3 rounded-lg">
                <div class="font-semibold text-gray-900">$450M+</div>
                <div class="text-gray-600">Revenue Tracked</div>
              </div>
              <div class="bg-gray-50 p-3 rounded-lg">
                <div class="font-semibold text-gray-900">12</div>
                <div class="text-gray-600">Industries</div>
              </div>
              <div class="bg-gray-50 p-3 rounded-lg">
                <div class="font-semibold text-gray-900">Q4 2024</div>
                <div class="text-gray-600">Latest Data</div>
              </div>
            </div>
            <Button variant="accent" size="lg" href="/downloads/Industry-Benchmark-Report-2025.md">
              View Complete Report
            </Button>
          </div>
        </div>
      </Card>
    </Container>
  </Section>

  <!-- Industry Breakdown -->
  <Section background="gray" padding="lg">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Industry Performance Overview</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Average conversion rates and key insights by industry sector.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Professional Services -->
        <Card variant="hover">
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-bold">Professional Services</h3>
              <Badge variant="success">4.8%</Badge>
            </div>
            <p class="text-gray-600 text-sm mb-4">
              Legal, consulting, accounting, and marketing agencies lead with the highest conversion rates.
            </p>
            <div class="text-xs text-gray-500">
              AOV: $2,500-$15,000 • +0.3% from 2024
            </div>
          </div>
        </Card>

        <!-- SaaS & Software -->
        <Card variant="hover">
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-bold">SaaS & Software</h3>
              <Badge variant="primary">4.2%</Badge>
            </div>
            <p class="text-gray-600 text-sm mb-4">
              Strong performance across freemium, trial, and direct purchase models.
            </p>
            <div class="text-xs text-gray-500">
              AOV: $49-$499/mo • +0.5% from 2024
            </div>
          </div>
        </Card>

        <!-- Healthcare & Wellness -->
        <Card variant="hover">
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-bold">Healthcare & Wellness</h3>
              <Badge variant="success">3.9%</Badge>
            </div>
            <p class="text-gray-600 text-sm mb-4">
              Telemedicine and wellness products showing strong growth.
            </p>
            <div class="text-xs text-gray-500">
              AOV: $85-$350 • +0.2% from 2024
            </div>
          </div>
        </Card>

        <!-- E-commerce -->
        <Card variant="hover">
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-bold">E-commerce</h3>
              <Badge variant="outline">2.8%</Badge>
            </div>
            <p class="text-gray-600 text-sm mb-4">
              Fashion and electronics leading, with mobile optimization crucial.
            </p>
            <div class="text-xs text-gray-500">
              AOV: $35-$150 • -0.1% from 2024
            </div>
          </div>
        </Card>

        <!-- Real Estate -->
        <Card variant="hover">
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-bold">Real Estate</h3>
              <Badge variant="outline">2.1%</Badge>
            </div>
            <p class="text-gray-600 text-sm mb-4">
              High-value transactions with long consideration periods.
            </p>
            <div class="text-xs text-gray-500">
              AOV: $2,000-$15,000 • +0.3% from 2024
            </div>
          </div>
        </Card>

        <!-- Financial Services -->
        <Card variant="hover">
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-bold">Financial Services</h3>
              <Badge variant="primary">3.6%</Badge>
            </div>
            <p class="text-gray-600 text-sm mb-4">
              Trust signals and compliance messaging critical for conversions.
            </p>
            <div class="text-xs text-gray-500">
              AOV: $500-$5,000 • +0.1% from 2024
            </div>
          </div>
        </Card>
      </div>

      <div class="text-center mt-12">
        <Button variant="accent" size="lg" href="/downloads/Industry-Benchmark-Report-2025.md">
          View All Industry Data
        </Button>
      </div>
    </Container>
  </Section>

  <!-- Key Insights -->
  <Section padding="lg">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Key Insights from the Data</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Critical trends and findings that every business should know.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <Card variant="outlined">
          <div class="p-8">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a1 1 0 001-1V4a1 1 0 00-1-1H8a1 1 0 00-1 1v16a1 1 0 001 1z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Mobile Performance Gap</h3>
            <p class="text-gray-600 mb-4">
              Mobile conversion rates average 44% lower than desktop across all industries, representing the biggest optimization opportunity.
            </p>
            <div class="bg-gray-50 p-4 rounded-lg">
              <div class="text-sm text-gray-600">Average Conversion Rate</div>
              <div class="text-lg font-semibold">Desktop: 3.2% | Mobile: 1.8%</div>
            </div>
          </div>
        </Card>

        <Card variant="outlined">
          <div class="p-8">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Speed Matters Most</h3>
            <p class="text-gray-600 mb-4">
              Websites loading under 2 seconds convert 3.7x better than those over 5 seconds. Page speed remains the #1 optimization factor.
            </p>
            <div class="bg-gray-50 p-4 rounded-lg">
              <div class="text-sm text-gray-600">Conversion by Load Time</div>
              <div class="text-lg font-semibold">&lt;2s: 4.8% | &gt;5s: 1.3%</div>
            </div>
          </div>
        </Card>

        <Card variant="outlined">
          <div class="p-8">
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Trust Signal Impact</h3>
            <p class="text-gray-600 mb-4">
              Security badges increase conversions by 42%, while customer testimonials add 34% lift. Trust elements compound for maximum effect.
            </p>
            <div class="bg-gray-50 p-4 rounded-lg">
              <div class="text-sm text-gray-600">Implementation Rate</div>
              <div class="text-lg font-semibold">Security: 45% | Testimonials: 67%</div>
            </div>
          </div>
        </Card>

        <Card variant="outlined">
          <div class="p-8">
            <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Geographic Variations</h3>
            <p class="text-gray-600 mb-4">
              North America leads at 2.8% average conversion rate, while emerging markets show high mobile adoption but face infrastructure challenges.
            </p>
            <div class="bg-gray-50 p-4 rounded-lg">
              <div class="text-sm text-gray-600">Top Performing Regions</div>
              <div class="text-lg font-semibold">NA: 2.8% | EU: 2.6% | APAC: 1.9%</div>
            </div>
          </div>
        </Card>
      </div>
    </Container>
  </Section>

  <!-- CTA Section -->
  <Section background="accent" padding="lg">
    <Container>
      <div class="text-center text-gray-900">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Get Your Industry Benchmarks
        </h2>
        <p class="text-xl mb-8 opacity-90 max-w-2xl mx-auto">
          Download the complete report with detailed breakdowns, optimization recommendations, and 2025 predictions.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button variant="primary" size="lg" href="/downloads/Industry-Benchmark-Report-2025.md">
            Download Full Report
          </Button>
          <Button variant="outline" size="lg" href="/calculator">
            Calculate Your Potential
          </Button>
        </div>
      </div>
    </Container>
  </Section>
</BaseLayout>