---
export const prerender = true;

import BaseLayout from '../../layouts/BaseLayout.astro';
import Container from '../../components/ui/Container.astro';
import Section from '../../components/ui/Section.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
---

<BaseLayout 
  title="2025 Industry Benchmark Report - Conversion Rate Data"
  description="Latest conversion rates and performance metrics across 12 industries. Updated quarterly with actionable insights and optimization opportunities."
>
  <!-- Hero Section -->
  <Section background="primary" padding="lg">
    <Container>
      <div class="text-center text-white">
        <Badge variant="accent" class="mb-6">2025 Data • Updated Quarterly</Badge>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          Industry <span class="text-accent">Benchmark Report</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 opacity-90 max-w-3xl mx-auto">
          Current conversion rates and performance metrics across 12 industries, based on analysis of 2.5M+ website visitors and $450M in tracked revenue.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button variant="accent" size="lg" href="#download">
            Get Free Report
          </Button>
          <Button variant="outline" size="lg" href="#preview">
            View Key Findings
          </Button>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Key Statistics -->
  <Section padding="lg">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">2025 Key Findings</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Essential benchmarks every business needs to know for competitive conversion optimization.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
        <Card variant="hover" class="text-center">
          <div class="text-4xl font-bold text-primary mb-2">2.35%</div>
          <div class="text-lg font-semibold mb-2">Average Conversion Rate</div>
          <div class="text-sm text-gray-600">Across all industries (2025)</div>
          <div class="text-xs text-success mt-1">↑ 0.23% from 2024</div>
        </Card>

        <Card variant="hover" class="text-center">
          <div class="text-4xl font-bold text-accent-700 mb-2">3.2s</div>
          <div class="text-lg font-semibold mb-2">Page Load Time</div>
          <div class="text-sm text-gray-600">Top performing sites</div>
          <div class="text-xs text-success mt-1">↓ 0.4s improvement</div>
        </Card>

        <Card variant="hover" class="text-center">
          <div class="text-4xl font-bold text-success mb-2">58%</div>
          <div class="text-lg font-semibold mb-2">Mobile Traffic</div>
          <div class="text-sm text-gray-600">Average across industries</div>
          <div class="text-xs text-success mt-1">↑ 3% from 2024</div>
        </Card>

        <Card variant="hover" class="text-center">
          <div class="text-4xl font-bold text-purple-600 mb-2">$127</div>
          <div class="text-lg font-semibold mb-2">Avg Order Value</div>
          <div class="text-sm text-gray-600">E-commerce transactions</div>
          <div class="text-xs text-success mt-1">↑ $12 increase</div>
        </Card>
      </div>
    </Container>
  </Section>

  <!-- Industry Breakdowns -->
  <Section id="preview" background="gray" padding="lg">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Industry Conversion Rates</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Detailed breakdown of conversion performance across major industry sectors.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-8">
        <!-- Top Performing Industries -->
        <Card variant="elevated">
          <h3 class="text-2xl font-bold mb-6 text-success">Top Performing Industries</h3>
          <div class="space-y-4">
            <div class="flex items-center justify-between p-4 bg-success-50 rounded-lg">
              <div>
                <h4 class="font-semibold text-success-800">Professional Services</h4>
                <p class="text-sm text-success-600">Legal, Consulting, Accounting</p>
              </div>
              <div class="text-right">
                <div class="text-2xl font-bold text-success">4.8%</div>
                <div class="text-xs text-success-600">↑ 0.3%</div>
              </div>
            </div>
            
            <div class="flex items-center justify-between p-4 bg-primary-50 rounded-lg">
              <div>
                <h4 class="font-semibold text-primary-800">SaaS & Software</h4>
                <p class="text-sm text-primary-600">B2B Software, Analytics Tools</p>
              </div>
              <div class="text-right">
                <div class="text-2xl font-bold text-primary">4.2%</div>
                <div class="text-xs text-primary-600">↑ 0.5%</div>
              </div>
            </div>

            <div class="flex items-center justify-between p-4 bg-accent-50 rounded-lg">
              <div>
                <h4 class="font-semibold text-accent-800">Healthcare & Wellness</h4>
                <p class="text-sm text-accent-600">Medical, Dental, Fitness</p>
              </div>
              <div class="text-right">
                <div class="text-2xl font-bold text-accent-700">3.9%</div>
                <div class="text-xs text-accent-600">↑ 0.2%</div>
              </div>
            </div>

            <div class="flex items-center justify-between p-4 bg-purple-50 rounded-lg">
              <div>
                <h4 class="font-semibold text-purple-800">Financial Services</h4>
                <p class="text-sm text-purple-600">Insurance, Banking, Investment</p>
              </div>
              <div class="text-right">
                <div class="text-2xl font-bold text-purple-600">3.6%</div>
                <div class="text-xs text-purple-600">↑ 0.1%</div>
              </div>
            </div>
          </div>
        </Card>

        <!-- Growth Opportunity Industries -->
        <Card variant="elevated">
          <h3 class="text-2xl font-bold mb-6 text-orange-600">Growth Opportunity Industries</h3>
          <div class="space-y-4">
            <div class="flex items-center justify-between p-4 bg-orange-50 rounded-lg">
              <div>
                <h4 class="font-semibold text-orange-800">E-commerce & Retail</h4>
                <p class="text-sm text-orange-600">Online stores, Marketplaces</p>
              </div>
              <div class="text-right">
                <div class="text-2xl font-bold text-orange-600">2.8%</div>
                <div class="text-xs text-red-500">↓ 0.1%</div>
              </div>
            </div>
            
            <div class="flex items-center justify-between p-4 bg-blue-50 rounded-lg">
              <div>
                <h4 class="font-semibold text-blue-800">Real Estate</h4>
                <p class="text-sm text-blue-600">Residential, Commercial</p>
              </div>
              <div class="text-right">
                <div class="text-2xl font-bold text-blue-600">2.1%</div>
                <div class="text-xs text-green-500">↑ 0.3%</div>
              </div>
            </div>

            <div class="flex items-center justify-between p-4 bg-green-50 rounded-lg">
              <div>
                <h4 class="font-semibold text-green-800">Education & Training</h4>
                <p class="text-sm text-green-600">Online Courses, Certifications</p>
              </div>
              <div class="text-right">
                <div class="text-2xl font-bold text-green-600">1.9%</div>
                <div class="text-xs text-green-500">↑ 0.2%</div>
              </div>
            </div>

            <div class="flex items-center justify-between p-4 bg-red-50 rounded-lg">
              <div>
                <h4 class="font-semibold text-red-800">Travel & Hospitality</h4>
                <p class="text-sm text-red-600">Hotels, Tours, Booking</p>
              </div>
              <div class="text-right">
                <div class="text-2xl font-bold text-red-600">1.6%</div>
                <div class="text-xs text-red-500">↓ 0.2%</div>
              </div>
            </div>
          </div>
        </Card>
      </div>
    </Container>
  </Section>

  <!-- Device & Channel Performance -->
  <Section padding="lg">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Device & Channel Performance</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          How conversion rates vary across devices and traffic sources in 2025.
        </p>
      </div>

      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Device Performance -->
        <Card variant="hover">
          <h3 class="text-xl font-bold mb-4 text-primary">Device Performance</h3>
          <div class="space-y-3">
            <div class="flex justify-between items-center">
              <span class="font-medium">Desktop</span>
              <div class="text-right">
                <span class="text-lg font-bold text-primary">3.2%</span>
                <span class="text-xs text-gray-500 block">42% of traffic</span>
              </div>
            </div>
            <div class="flex justify-between items-center">
              <span class="font-medium">Mobile</span>
              <div class="text-right">
                <span class="text-lg font-bold text-accent-700">1.8%</span>
                <span class="text-xs text-gray-500 block">58% of traffic</span>
              </div>
            </div>
            <div class="flex justify-between items-center">
              <span class="font-medium">Tablet</span>
              <div class="text-right">
                <span class="text-lg font-bold text-success">2.9%</span>
                <span class="text-xs text-gray-500 block">3% of traffic</span>
              </div>
            </div>
          </div>
        </Card>

        <!-- Traffic Source Performance -->
        <Card variant="hover">
          <h3 class="text-xl font-bold mb-4 text-accent-700">Traffic Sources</h3>
          <div class="space-y-3">
            <div class="flex justify-between items-center">
              <span class="font-medium">Direct</span>
              <div class="text-right">
                <span class="text-lg font-bold text-success">4.1%</span>
                <span class="text-xs text-gray-500 block">28% of traffic</span>
              </div>
            </div>
            <div class="flex justify-between items-center">
              <span class="font-medium">Organic Search</span>
              <div class="text-right">
                <span class="text-lg font-bold text-primary">3.5%</span>
                <span class="text-xs text-gray-500 block">35% of traffic</span>
              </div>
            </div>
            <div class="flex justify-between items-center">
              <span class="font-medium">Paid Search</span>
              <div class="text-right">
                <span class="text-lg font-bold text-accent-700">2.8%</span>
                <span class="text-xs text-gray-500 block">18% of traffic</span>
              </div>
            </div>
            <div class="flex justify-between items-center">
              <span class="font-medium">Social Media</span>
              <div class="text-right">
                <span class="text-lg font-bold text-orange-600">1.9%</span>
                <span class="text-xs text-gray-500 block">12% of traffic</span>
              </div>
            </div>
          </div>
        </Card>

        <!-- Page Speed Impact -->
        <Card variant="hover">
          <h3 class="text-xl font-bold mb-4 text-success">Page Speed Impact</h3>
          <div class="space-y-3">
            <div class="flex justify-between items-center">
              <span class="font-medium">< 2 seconds</span>
              <div class="text-right">
                <span class="text-lg font-bold text-success">4.8%</span>
                <span class="text-xs text-success-600 block">Top quartile</span>
              </div>
            </div>
            <div class="flex justify-between items-center">
              <span class="font-medium">2-3 seconds</span>
              <div class="text-right">
                <span class="text-lg font-bold text-primary">3.2%</span>
                <span class="text-xs text-gray-500 block">Average</span>
              </div>
            </div>
            <div class="flex justify-between items-center">
              <span class="font-medium">3-5 seconds</span>
              <div class="text-right">
                <span class="text-lg font-bold text-orange-600">2.1%</span>
                <span class="text-xs text-orange-600 block">Below average</span>
              </div>
            </div>
            <div class="flex justify-between items-center">
              <span class="font-medium">> 5 seconds</span>
              <div class="text-right">
                <span class="text-lg font-bold text-red-600">1.3%</span>
                <span class="text-xs text-red-600 block">Bottom quartile</span>
              </div>
            </div>
          </div>
        </Card>
      </div>
    </Container>
  </Section>

  <!-- Key Insights -->
  <Section background="gray" padding="lg">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Key Insights & Recommendations</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Actionable takeaways based on our analysis of millions of website interactions.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-8">
        <Card variant="elevated">
          <div class="flex items-start mb-4">
            <div class="w-8 h-8 bg-success-100 rounded-full flex items-center justify-center mr-4 mt-1">
              <svg class="w-4 h-4 text-success" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-3">Mobile-First is Critical</h3>
              <p class="text-gray-600 mb-4">
                With 58% of traffic now mobile, optimizing for mobile conversions is no longer optional. Sites with mobile-optimized experiences see 67% higher conversion rates on mobile devices.
              </p>
              <div class="bg-success-50 p-3 rounded-lg">
                <p class="text-sm text-success-800">
                  <strong>Action:</strong> Implement mobile-specific conversion funnels and reduce form fields by 40% for mobile users.
                </p>
              </div>
            </div>
          </div>
        </Card>

        <Card variant="elevated">
          <div class="flex items-start mb-4">
            <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center mr-4 mt-1">
              <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-3">Page Speed = Revenue</h3>
              <p class="text-gray-600 mb-4">
                Sites loading under 2 seconds convert 3.7x better than those over 5 seconds. A 1-second improvement in load time can increase conversions by up to 27%.
              </p>
              <div class="bg-primary-50 p-3 rounded-lg">
                <p class="text-sm text-primary-800">
                  <strong>Action:</strong> Audit Core Web Vitals and prioritize LCP improvements for immediate conversion gains.
                </p>
              </div>
            </div>
          </div>
        </Card>

        <Card variant="elevated">
          <div class="flex items-start mb-4">
            <div class="w-8 h-8 bg-accent-100 rounded-full flex items-center justify-center mr-4 mt-1">
              <svg class="w-4 h-4 text-accent-700" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-3">Trust Signals Matter More</h3>
              <p class="text-gray-600 mb-4">
                Sites with prominent testimonials, security badges, and social proof see 32% higher conversion rates. Trust is especially critical for new visitor conversions.
              </p>
              <div class="bg-accent-50 p-3 rounded-lg">
                <p class="text-sm text-accent-800">
                  <strong>Action:</strong> Add customer logos, review counts, and security certifications above the fold.
                </p>
              </div>
            </div>
          </div>
        </Card>

        <Card variant="elevated">
          <div class="flex items-start mb-4">
            <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center mr-4 mt-1">
              <svg class="w-4 h-4 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold mb-3">Personalization Pays Off</h3>
              <p class="text-gray-600 mb-4">
                Websites using basic personalization (location, device, traffic source) see 19% higher conversion rates than static experiences. Advanced personalization increases this to 35%.
              </p>
              <div class="bg-purple-50 p-3 rounded-lg">
                <p class="text-sm text-purple-800">
                  <strong>Action:</strong> Start with geo-targeted messaging and device-specific layouts before advancing to behavioral targeting.
                </p>
              </div>
            </div>
          </div>
        </Card>
      </div>
    </Container>
  </Section>

  <!-- Download Section -->
  <Section id="download" background="primary" padding="lg">
    <Container>
      <div class="text-center text-white">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Get the Complete 2025 Benchmark Report
        </h2>
        <p class="text-xl mb-8 opacity-90 max-w-2xl mx-auto">
          40+ pages of detailed industry analysis, performance metrics, and optimization recommendations. Updated quarterly with the latest data.
        </p>
        
        <Card variant="elevated" class="max-w-2xl mx-auto text-gray-900">
          <form class="space-y-6" action="/api/download-benchmark-report" method="POST">
            <div class="grid md:grid-cols-2 gap-4">
              <input 
                type="text" 
                name="firstName"
                placeholder="First Name"
                class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                required
              >
              <input 
                type="text" 
                name="lastName"
                placeholder="Last Name"
                class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                required
              >
            </div>
            <input 
              type="email" 
              name="email"
              placeholder="Work Email Address"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
              required
            >
            <select 
              name="industry"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
              required
            >
              <option value="">Select Your Industry</option>
              <option value="professional-services">Professional Services</option>
              <option value="saas-software">SaaS & Software</option>
              <option value="healthcare-wellness">Healthcare & Wellness</option>
              <option value="financial-services">Financial Services</option>
              <option value="ecommerce-retail">E-commerce & Retail</option>
              <option value="real-estate">Real Estate</option>
              <option value="education-training">Education & Training</option>
              <option value="travel-hospitality">Travel & Hospitality</option>
              <option value="other">Other</option>
            </select>
            <Button variant="accent" size="lg" type="submit" class="w-full">
              Download 2025 Benchmark Report
            </Button>
          </form>
          <p class="text-sm text-gray-500 mt-4">
            Includes industry-specific insights and quarterly updates. We respect your privacy and never share your information.
          </p>
        </Card>

        <div class="mt-8 flex flex-wrap justify-center gap-8 text-sm opacity-90">
          <div class="flex items-center">
            <svg class="w-4 h-4 text-accent mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            40+ pages of data & insights
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 text-accent mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            Updated quarterly
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 text-accent mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            12 industry breakdowns
          </div>
        </div>
      </div>
    </Container>
  </Section>
</BaseLayout>