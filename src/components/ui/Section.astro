---
export interface Props {
  padding?: 'none' | 'sm' | 'md' | 'lg';
  background?: 'transparent' | 'white' | 'gray' | 'primary' | 'accent' | 'success';
  class?: string;
}

const { 
  padding = 'lg',
  background = 'transparent',
  class: className = '',
  ...rest 
} = Astro.props;

const paddings = {
  none: '',
  sm: 'py-10 md:py-16',
  md: 'py-16 md:py-24',
  lg: 'py-20 md:py-32'
};

const backgrounds = {
  transparent: '',
  white: 'bg-white',
  gray: 'bg-gray-50',
  primary: 'bg-primary text-white',
  accent: 'bg-accent text-gray-900',
  success: 'bg-success text-white'
};

const classes = `${paddings[padding]} ${backgrounds[background]} ${className}`;
---

<section class={classes} {...rest}>
  <slot />
</section>