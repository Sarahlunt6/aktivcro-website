---
export interface Props {
  variant?: 'default' | 'hover' | 'outlined' | 'elevated';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  class?: string;
}

const { 
  variant = 'default',
  padding = 'md',
  class: className = '',
  ...rest 
} = Astro.props;

const baseClasses = 'bg-white rounded-xl border border-gray-200';

const variants = {
  default: 'shadow-sm',
  hover: 'shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300 cursor-pointer',
  outlined: 'border-2 border-gray-300',
  elevated: 'shadow-lg'
};

const paddings = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8'
};

const classes = `${baseClasses} ${variants[variant]} ${paddings[padding]} ${className}`;
---

<div class={classes} {...rest}>
  <slot />
</div>