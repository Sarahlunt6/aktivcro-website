---
export interface Props {
  type?: 'text' | 'email' | 'password' | 'tel' | 'url' | 'number';
  placeholder?: string;
  value?: string;
  name?: string;
  id?: string;
  required?: boolean;
  disabled?: boolean;
  error?: boolean;
  label?: string;
  helpText?: string;
  class?: string;
}

const { 
  type = 'text',
  placeholder,
  value,
  name,
  id,
  required = false,
  disabled = false,
  error = false,
  label,
  helpText,
  class: className = '',
  ...rest 
} = Astro.props;

const inputClasses = `w-full px-4 py-3 border rounded-lg transition-colors duration-200 focus:ring-2 focus:ring-primary-500 focus:border-transparent ${
  error 
    ? 'border-red-500 focus:ring-red-500' 
    : 'border-gray-300'
} ${disabled ? 'bg-gray-100 cursor-not-allowed' : 'bg-white'} ${className}`;
---

<div class="space-y-1">
  {label && (
    <label 
      for={id} 
      class={`block text-sm font-medium ${error ? 'text-red-700' : 'text-gray-700'}`}
    >
      {label}
      {required && <span class="text-red-500 ml-1">*</span>}
    </label>
  )}
  
  <input
    type={type}
    id={id}
    name={name}
    placeholder={placeholder}
    value={value}
    required={required}
    disabled={disabled}
    class={inputClasses}
    {...rest}
  />
  
  {helpText && (
    <p class={`text-sm ${error ? 'text-red-600' : 'text-gray-500'}`}>
      {helpText}
    </p>
  )}
</div>