---
export interface FAQ {
  question: string;
  answer: string;
}

export interface Props {
  faqs: FAQ[];
}

const { faqs } = Astro.props;
---

<script type="application/ld+json" define:vars={{ faqItems: faqs }}>
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": faqItems.map(faq => ({
      "@type": "Question",
      "name": faq.question,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": faq.answer
      }
    }))
  }
</script>